@model EducationPortal.BusinessLogic.DTO.CourseProgressDto
@{
    ViewData["Title"] = "Study Course";
}

<h2>@ViewData["Title"]</h2>

@* @Html.ActionLink("← Back to Courses", "Index") *@

<h3>Info</h3>

<p><b>Name</b>: @Model.CourseName</p>
<p><b>Course completion percent</b>: @Model.Progress %</p>
<p><b>Materials</b>:</p>
<ul>
    @foreach (var material in Model.Materials)
    {
        <li>
            @Html.ActionLink(material.Name, "Details", "Materials", new { id = material.MaterialId })
            @if (material.Progress < 100)
            {
                <a class="btn btn-primary" asp-action="StudyMaterial" asp-route-id="@material.MaterialId">Complete</a>
            }
            else
            {
                <a class="btn btn-primary disabled">Complete</a>
            }
        </li>
    }
</ul>