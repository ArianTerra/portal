@model EducationPortal.BusinessLogic.DTO.BookFormatDto
@{
    ViewData["Title"] = "Book Format Details";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("← Back to Book Formats", "Index")

<h3>Info</h3>

<p><b>ID</b>: @Model.Id</p>
